@model Vidly.Models.Movie

@{
    ViewBag.Title = "MoviewById";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>


<ul>
    
    <li>Genre: @Model.Genres.Name</li>

    @if (Model.ReleaseDate.HasValue)
    {
        <li>Release Date: @Model.ReleaseDate.Value.Date.ToShortDateString()</li>
    }

    @if (Model.DateAdded.HasValue)
    {
        <li>Date Added: @Model.DateAdded.Value.Date.ToShortDateString()</li>
    }

    <li>Number in stock: @Model.NumberInStock</li>

</ul>
