@using Vidly.Models;
@model Vidly.Models.Customer

@{
    ViewBag.Title = "New Customer View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customer Details</h2>

@using (Html.BeginForm("Create", "Customer"))
{
    <div class="form-group">
    
        @Html.LabelFor(c => c.Name, new {@class = "form-control" })
        @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })

    </div>

    <div class="form-group">

        @Html.LabelFor(c => c.DateOfBirth, new { @class = "form-control" })
        @Html.TextBoxFor(c => c.DateOfBirth, new {@class = "form-control" })

    </div>

    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(c => c.IsNewsLetterSubscribed) Is Subscribed To NewsLetter ?
        </label>
    </div>


}